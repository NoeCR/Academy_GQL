{
  "name": "academy",
  "version": "1.0.0",
  "description": "Backend for a academy online",
  "main": "build/server.js",
  "scripts": {
    "start": "node PORT=3000 build/server.js",
    "build": "tsc -p . && ncp src/schema build/schema",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon --config nodemon.json \"src/server.ts\" --exec \"ts-node\" src/server.ts -e ts,json,graphql"
  },
  "author": "NRC <noecr.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.9.16",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "graphql": "^14.5.8",
    "graphql-import-node": "0.0.4",
    "graphql-playground-middleware-express": "^1.7.12",
    "graphql-tools": "^4.0.6",
    "http": "0.0.0",
    "lodash": "^4.17.15",
    "ncp": "^2.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.5.0"
  },
  "nodemonConfig": {
    "ignore": ["test/*", "docs/*"],
    "delay": "2500"
  }
}
